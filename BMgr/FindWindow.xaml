<Window x:Class="BMgr.FindWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BMgr"
        mc:Ignorable="d"
        Title="Find" Height="296.208" Width="494.667" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <RadioButton x:Name="byname" Content="Search by name" HorizontalAlignment="Left" Margin="19,25,0,0" VerticalAlignment="Top" FontSize="24" IsChecked="True"/>
        <RadioButton x:Name="byauthor" Content="Search by author" HorizontalAlignment="Left" Margin="19,75,0,0" VerticalAlignment="Top" FontSize="24"/>
        <RadioButton x:Name="bytag" Content="Search by tag(Maybe slow!)" HorizontalAlignment="Left" Margin="19,125,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Button x:Name="Run_button" Content="Run" HorizontalAlignment="Left" Margin="219,218,0,0" VerticalAlignment="Top" Width="104" Height="26" Click="Run_button_Click"/>
        <Button x:Name="Cancel_button" Content="Cancel" HorizontalAlignment="Left" Margin="358,218,0,0" VerticalAlignment="Top" Width="103" Height="26" Click="Cancel_button_Click"/>

    </Grid>
</Window>
